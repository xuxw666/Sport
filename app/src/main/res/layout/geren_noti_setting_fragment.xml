<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:clickable="true"
    android:id="@+id/root"
    android:layout_height="match_parent" android:background="@color/beijingse">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_to_fragment"
        android:text="返回"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:padding="10dp"/>

    <View
        android:layout_below="@+id/back_to_fragment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/fengexian"
        android:background="#7f7f7f"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/fengexian"
        android:id="@+id/gerenid"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_nomal_geren"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户编号："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000001"
            android:id="@+id/yonghubianhao"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_below="@+id/gerenid"
        android:id="@+id/gerenxiugai"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_nomal_geren"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改资料"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/goin"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_nomal_geren"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改密码"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/goin"
                android:scaleType="centerInside"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_below="@+id/gerenxiugai"
        android:id="@+id/gerennxunlian"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_nomal_geren"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练目标"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/goin"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_nomal_geren"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="训练每日通知"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/goin"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <View
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_nomal_geren"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="排行榜"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:src="@drawable/goin"
                android:scaleType="centerInside"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>